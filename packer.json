{
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "",
      "secret_key": "",
      "region": "us-west-2",
      "source_ami": "ami-cf397aff",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "medullan-ubuntu-latest-{{timestamp}}-{{isotime \"02-Jan-06\"}}",
      "ami_description": "Ubuntu Trusty 64bit Base Image for Jenkins Slaves/Test/Dev/Prod environments with preinstalled tools. To see what these are, please see https://github.com/medullan/vagrant-ansible-jenkins/wiki/03.-Whats-Already-inside",
      "tags": {
        "OS_Version": "Ubuntu",
        "Release": "Latest",
        "Provisioner": "Medullan"
      }
    },
    {
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US auto locale=en_US kbd-chooser/method=us <wait>",
        "hostname={{ .Name }} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false <wait>",
        "initrd=/install/initrd.gz -- <enter><wait>"
      ],
      "boot_wait": "4s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "ca2531b8cd79ea5b778ede3a524779b9",
      "iso_checksum_type": "md5",
      "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.1-server-amd64.iso",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/scripts/ansible.sh"
      ]
    },
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "provisioners/scripts/root_setup.sh"
      ],
      "type": "shell",
      "only": ["virtualbox-iso"]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "provisioners/ansible",
      "playbook_file": "provisioners/ansible/jenkins-slave-playbook.yml",
      "inventory_file": "provisioners/ansible/packer.host",
      "extra_arguments": ["--extra-vars", "@extra_vars/jenkins-slave-vb-playbook-vars.yml", "-s"],
      "only": ["virtualbox-iso"]
    },
    {
      "type": "ansible-local",
      "playbook_dir": "provisioners/ansible",
      "playbook_file": "provisioners/ansible/jenkins-slave-playbook.yml",
      "inventory_file": "provisioners/ansible/packer.host",
      "extra_arguments": ["--extra-vars", "@extra_vars/jenkins-slave-playbook-vars.yml", "-s"],
      "only": ["amazon-ebs"]
    },
    {
      "scripts": [
        "provisioners/scripts/setup.sh"
      ],
      "type": "shell",
      "only": ["virtualbox-iso"]
    }

  ]
}
